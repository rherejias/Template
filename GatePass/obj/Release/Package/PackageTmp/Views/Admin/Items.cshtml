                                             grid-width="100"
                                             data-url="/Items/GetItemCategories"
                                             grid-pagesizeoptions="10,20,50,100"
                                             grid-selection-mode="singlerow"
                                             grid-hide-columns="0,1,4"
                                             data-action-buttons="Inactive"
                                             data-statusbar-buttons="Export to Excel"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div role="tabpanel" class="tab-pane" id="tab3">
