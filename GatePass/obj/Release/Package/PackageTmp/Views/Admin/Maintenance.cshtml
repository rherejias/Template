
@{
    Layout = "~/Views/Shared/template/_Layout.cshtml";
}
@section content {
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title" id="titleView"><i class="fa fa-building" aria-hidden="true"></i> Supplier Company</h3>
                    <button id="cmdAddNew" class="btn btn-success" style="float:right; top:-8px; position:relative; box-shadow:3px 3px 1px #168572;"><i class="fa fa-plus" aria-hidden="true"></i> Create New</button>
                </div>

                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12" id="mainGridContainer">
                            <br/>
                            @*<input type="text" id="txtGenSearch">*@
                            <div class="jqxgrid jqxgrid-autoheight jqxgrid-enablehover jqxgrid-enableellipsis jqxgrid-pageable jqxgrid-virtualmode jqxgrid-pagesizeoptions jqxgrid-showstatusbar jqxgrid-toolbar jqxgrid-columnsresize"
                                 id="SupplierGrid"
                                 grid-width="100"
                                 data-url="/Supplier/GetSuppliers"
                                 grid-selection-mode="singlerow"
                                 grid-pagesizeoptions="5,10,20,50,100"
                                 grid-child="ContactPersonGrid"
                                 grid-hide-columns="0,1,11,12"
                                 data-action-buttons="Edit,Inactive"

                                 data-statusbar-buttons="Export to Excel,Upload Excel File,Clear Filter">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title" id="titleView"><i class="fa fa-user" aria-hidden="true"></i> Contact Person</h3>
                    <button id="cmdAddContact" class="btn btn-success" style="float:right; top:-8px; position:relative; box-shadow:3px 3px 1px #168572;display:none;"><i class="fa fa-plus" aria-hidden="true"></i> Create New</button>
               </div>

                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-12">
                                <br />
                                <div class="jqxgrid jqxgrid-autoheight jqxgrid-enablehover jqxgrid-enableellipsis jqxgrid-pageable jqxgrid-virtualmode jqxgrid-pagesizeoptions jqxgrid-showstatusbar jqxgrid-toolbar jqxgrid-columnsresize"
                                     id="ContactPersonGrid"
                                     grid-width="100"
                                     data-url="/ContactPerson/GetSuppliers"
                                     grid-pagesizeoptions="5,10,20,50,100"
                                     grid-selection-mode="singlerow"
                                     grid-hide-columns="0,1,2,9,10"
                                     data-action-buttons="Edit,Inactive"
                                     data-statusbar-buttons="Export to Excel"></div>
                                    @*<p><a id="exportExcelContact" href="#">Export to Excel</a></p>*@
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    </div>
}
@section JavaScript {
    <script src="~/Scripts/pages/Maintenance.js"></script>
}
