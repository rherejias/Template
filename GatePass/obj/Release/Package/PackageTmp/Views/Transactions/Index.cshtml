
@{
    Layout = "~/Views/Shared/template/_Layout.cshtml";

}

@section content {


<div class="row">
    <div class="col-md-12">
        <div class="panel panel-white">

            <div class="panel-body">
                <div role="tabpanel">
                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs" role="tablist">
                        <li role="presentation" class="active"><a href="#tab5" role="tab" data-toggle="tab">Gate Pass</a></li>
                        <li role="presentation"><a href="#tab6" role="tab" data-toggle="tab">Return Slip</a></li>

                    </ul>
                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane active fade in" id="tab5">
                            
                            <div class="row">
                                <div class="panel panel-info">
                                    <div class="panel-heading" style="padding-top: 20px; overflow: hidden">
                                        <h3 class="panel-title" id="titleCreate" style="display:none">
                                            @*<i class="fa fa-arrow-circle-o-left fa-lg" style="cursor:pointer; color:Black" id="cmdButton" title="Back to View" aria-hidden="true"></i>&nbsp;&nbsp; |&nbsp;&nbsp;*@
                                            <i class="fa fa-plus" aria-hidden="true"></i> Create New GatePass Request
                                        </h3>
                                        <button id="cmdButton" class="btn btn-primary" style="float:right; display:none; top:-8px; position:relative; box-shadow:3px 3px 1px #544c89"><i class="fa fa-arrow-left" aria-hidden="true"></i> Back to View</button>

                                        <h3 class="panel-title" id="titleView"><i class="fa fa-file-text" aria-hidden="true"></i> GatePass Transactions</h3>
                                        <button id="cmdCreateNew" class="btn btn-success" style="float:right; top:-8px; position:relative; box-shadow:3px 3px 1px #168572"><i class="fa fa-plus" aria-hidden="true"></i> Create New</button>
                                    </div>

                                    <div class="panel-body" style="border-style:solid;border-width:1px;border-color:black; border-color:#12AFCB">
                                        <br />
                                        <div class="row" id="bodyViewTrans">
                                            <div id="frm" class="form-inline">
                                                <div class="input-group" style="display:none">
                                                    <input type="text" class="form-control" placeholder="Search..." />

                                                    <span class="input-group-addon add-on">
                                                        <i class="fa fa-search faa-tada animated-hover"
                                                           style="color: #31B0D5">
                                                        </i>
                                                    </span>
                                                </div>
                                                <label style="float:right">
                                                    View by:&nbsp;&nbsp;
                                                    <select name="c" id="cmbStatus" class="form-control" data-fieldname="status_string" data-grid="gridAllTrans">
                                                        <option value="Submitted">Submitted</option>
                                                        <option value="Approved">Approved</option>
                                                        <option value="Drafted">Drafted</option>
                                                        <option value="Rejected">Rejected</option>
                                                    </select>
                                                </label>

                                            </div>

                                            <br />

                                            <div class="jqxgrid jqxgrid-filterable jqxgrid-sortable jqxgrid-autoheight jqxgrid-enablehover jqxgrid-enableellipsis jqxgrid-pageable jqxgrid-virtualmode jqxgrid-pagesizeoptions jqxgrid-columnsresize"
                                                 id="gridAllTrans"
                                                 grid-width="100"
                                                 data-url="/Transactions/GetAllTrans"
                                                 grid-selection-mode="singlerow"
                                                 grid-pagesizeoptions="5,10,20,50,100"
                                                 data-action-buttons="Show Details,Edit,Inactive"
                                                 @*data-additionalparamelems="cmbStatus"*@
                                                 grid-hide-columns="0,2,4,5,8">

                                            </div>

                                        </div>

                                        <div class="col-md-12" id="bodyCreateNew" style="display:none">
                                            <div class="row">
                                                <div class="col-md-1"></div>

                                                <div class="col-md-5">

                                                    <div class="row">
                                                        <div class="form-group col-md-6">
                                                            <label for="txtGatePassID">Gate Pass ID*:</label>
                                                            <input type="text" class="form-control" id="txtGatePassID" placeholder="System Generated" readonly="readonly">
                                                        </div>
                                                        <div class="form-group col-md-6">
                                                            <label for="txtImpexRefNbr">IMPEX Ref. Number*:</label>
                                                            <input type="text" class="form-control" id="txtImpexRefNbr" placeholder="IMPEX Ref. Number">
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <label for="cmbTransType">Transaction Type*:</label>
                                                            <select id="cmbTransType" class="form-control m-b-sm">
                                                                <option value="IN">IN</option>
                                                                <option value="OUT">OUT</option>
                                                            </select>
                                                        </div>

                                                        <div class="col-md-6">
                                                            <label for="txtReturnDate">Return Date*:</label>
                                                            <div class="input-group input-append date form_datetime">
                                                                <input id="txtReturnDate" type="text" class="form-control" style="background-color:transparent" readonly />

                                                                <span class="input-group-addon add-on">
                                                                    <i class="fa fa-calendar faa-tada animated-hover"
                                                                       style="color: #31B0D5">
                                                                    </i>
                                                                </span>
                                                            </div>


                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="col-md-5">
                                                    <div class="col-md-12" style="padding:0;">
                                                        <label for="txtPurpose">Purpose*:</label>
                                                        <textarea class="form-control" placeholder="Purpose" rows="5=6" id="txtPurpose"></textarea>
                                                    </div>
                                                </div>


                                                <div class="col-md-1"></div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-1"></div>
                                                <div class="col-md-10">
                                                    <div class="row">
                                                        <div class="col-md-3">
                                                             <label for="headerAttachment">Upload File*:</label>
                                                            <input type="file" id="headerAttachment" name="headerAttachment" style="color:#F25656; font-size:1.1em;" />
                                                        </div>
                                                        <div class="col-md-3" >
                                                            <label id="lblcurrentFile" for="current" style="margin-top:9.5%;" hidden="hidden">Current File: </label>
                                                            <a id="file" href="" download ><label id="currentFile" class="text-success" style="margin-top:9.5%; cursor:pointer; font-weight:bold;" hidden="hidden"></label></a>
                                                            <button id="removeAttachment" class="btn btn-danger test" style="display:none;"><i class="fa fa-remove" aria-hidden="true"></i> Remove</button>
                                                            @*<input type="text" class="form-control" id="current" placeholder="None" disabled>*@
                                                        </div>
                                                        <div class="col-md-6"><button id="cmdAddItem" class="btn btn-warning" style="float:right; margin-top:3%;"><i class="fa fa-plus" aria-hidden="true"></i> Add Item</button></div>
                                                    </div>
                                                    <br />
                                                </div>
                                                <div class="col-md-1"></div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-1"></div>
                                                <div class="col-md-10">
                                                    <div id="detailsContainer">
                                                        <div class="jqxgrid jqxgrid-filterable jqxgrid-sortable jqxgrid-autoheight jqxgrid-enablehover jqxgrid-enableellipsis jqxgrid-pageable jqxgrid-virtualmode jqxgrid-pagesizeoptions jqxgrid-custom"
                                                             id="gridDetails"
                                                             grid-width="100"
                                                             data-url="/Transactions/GetTransDetails"
                                                             grid-selection-mode="singlerow"
                                                             grid-pagesizeoptions="5,10,20,50,100"
                                                             data-action-buttons="Inactive"
                                                             grid-rowsheight="60"
                                                             grid-hide-columns="0,1,2,3,4,6,10,15,16">
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-1"></div>
                                            </div>

                                            <div class="row" style="text-align: right;">
                                                <hr style="border-color:#12AFCB" />
                                                <div class="col-md-1"></div>
                                                <div class="col-md-10">
                                                    <button id="cmdDraftUpdate" class="btn btn-info"><i class="fa fa-pencil" aria-hidden="true"></i> Update</button>
                                                    <button id="cmdSaveAsDraft" class="btn btn-info"><i class="fa fa-pencil" aria-hidden="true"></i> Save As Draft</button>
                                                    <button id="cmdSaveAndSubmit" class="btn btn-success"><i class="fa fa-paper-plane" aria-hidden="true"></i> Submit</button>
                                                </div>
                                                <div class="col-md-1"></div>
                                            </div>
                                        </div>

                                    </div>

                                    @*<div class="panel-body">




                </div>*@

                                </div>
                            </div>




                        </div>
                        <div role="tabpanel" class="tab-pane fade" id="tab6">

                           <div class="row">

                               <div class="jqxgrid jqxgrid-filterable jqxgrid-sortable jqxgrid-autoheight jqxgrid-enablehover jqxgrid-enableellipsis jqxgrid-pageable jqxgrid-virtualmode jqxgrid-pagesizeoptions jqxgrid-columnsresize"
                                    id="grid_returnslip"
                                    grid-width="100"
                                    data-url="/Transactions/GetAll_ReturnSlip"
                                    grid-selection-mode="singlerow"
                                    grid-pagesizeoptions="5,10,20,50,100"
                                   data-action-buttons="Item_Details"
                                    @* data-additionalparamelems="cmbStatus"*@
                                    grid-hide-columns="0,2,4">

                               </div>

                           </div>

                          
                     

                        </div>


                       

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>



}
@section JavaScript {

    <script src="~/Scripts/pages/mytransaction/mytransaction.js"></script>
    <script src="~/Scripts/pages/mytransaction/bootstrap-datetimepicker.min.js"></script>
}
